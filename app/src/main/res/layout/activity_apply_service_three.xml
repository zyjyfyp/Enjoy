<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yunsen.enjoy.activity.dealer.ApplyServiceThreeActivity">

    <include layout="@layout/back_action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/ApplyService2Tv"
                    android:text="战略合作类别" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/facilitator_category_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:hint="请选择战略合作类别"
                    android:textColor="@color/title_color"
                    android:textSize="13sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_light" />

            <TextView
                style="@style/ApplyService2Tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginLeft="@dimen/app_margin"
                android:text="服务商简介" />

            <EditText
                android:id="@+id/facilitator_synopsis_edt"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:background="@null"
                android:gravity="top|left"
                android:hint="请输入服务商简介"
                android:scrollbars="vertical"
                android:textColor="@color/title_color"
                android:textSize="13sp" />


            <TextView
                android:visibility="gone"
                style="@style/ApplyService2Tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginLeft="@dimen/app_margin"
                android:text="服务特色优势" />

            <EditText
                android:visibility="gone"
                android:id="@+id/facilitator_advantage_edt"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:background="@null"
                android:gravity="top|left"
                android:hint="请输入服务商优势"
                android:scrollbars="vertical"
                android:textColor="@color/title_color"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_margin"
                android:background="@color/gray_light" />

            <TextView
                style="@style/ApplyService2Tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:text="服务商Logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:text="请上传代表服务商形象的logo，用于平台中展示"
                android:textColor="@color/color_888"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/facilitator_logo_img"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_margin="@dimen/app_margin"
                android:scaleType="centerInside"
                android:src="@mipmap/positive_photo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_margin"
                android:background="@color/gray_light" />

            <TextView
                style="@style/ApplyService2Tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:text="服务商资质" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:text="请上传营业执照照片，并输入营业执照号"
                android:textColor="@color/color_888"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/facilitator_aptitude_img"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_margin="@dimen/app_margin"
                android:scaleType="centerInside"
                android:src="@mipmap/positive_photo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/ApplyService2Tv"
                    android:text="营业执照注册号" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/facilitator_business_licence_edt"
                    style="@style/ApplyService2Edt"
                    android:hint="请输入营业执照号码" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:text="请上传税务登记证明，组织机构代码证明\n(注意：如果是三证合一，不需要上传下面的证件)"
                android:textColor="@color/color_888"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="@dimen/app_margin"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/facilitator_revenue_img"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_margin="@dimen/app_margin"
                    android:scaleType="centerInside"
                    android:src="@mipmap/positive_photo" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/facilitator_mechanism_img"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_margin="@dimen/app_margin"
                    android:scaleType="centerInside"
                    android:src="@mipmap/positive_photo" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_margin"
                android:background="@color/gray_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/protocol_selection_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/app_margin"
                    android:button="@drawable/protocol_selection_select" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="同时申请成为服务商并同意"
                        android:textColor="@color/title_color"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/join_protocol_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="《袋鼠车宝服务商加盟协议》"
                        android:textColor="@color/orange_color"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_light" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/ApplyService2Tv"
                    android:text="消费银行推荐人" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/facilitator_referee_num_edt"
                    style="@style/ApplyService2Edt"
                    android:hint="请填写您的推荐人电话号码" />

            </LinearLayout>

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/app_margin"
                android:background="@drawable/button_bg"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/bar_title_size" />
        </LinearLayout>


    </ScrollView>

</LinearLayout>
